<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 
	xmlns:context="http://www.springframework.org/schema/context"
	
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
						http://www.springframework.org/schema/context
						http://www.springframework.org/schema/context/spring-context-3.0.xsd">


	<!-- Database Configuration -->
	<import resource="HibernateContext.xml"/>
 
	<bean id="applicationContext" class="com.cherkashyn.vitalii.computer_shop.rediscount.context.SpringApplicationContext" />

	<!-- Auto scan the components -->
	<context:component-scan base-package="com.cherkashyn.vitalii.computer_shop.rediscount" />


</beans>